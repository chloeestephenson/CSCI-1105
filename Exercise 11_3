 * Description: This will implement the account and subclasses
 */
import java.util.Scanner;
public class Exercise11_3 {
	static Scanner input = new Scanner(System.in);
	public static void main(String args[]) {
		double u = 0.0;
		double o = 0.0;
		double b = 0.0;
		int a = 0;
		
		System.out.println("Enter your account number: ");
		a = input.nextInt();
		System.out.println("Enter your account balance: ");
		b = input.nextDouble();
		
		System.out.println("Your account number is " + a);
		System.out.println("Enter 1 or 2 to select account type...");
		System.out.println("1 = Savings account");
		System.out.println("2 = Checkings account");
		u = input.nextDouble();
		if(u == 1) {
			Saving s1 = new Saving();
			System.out.println("Savings account initiated... ");
			System.out.println("There is no overdraft limit. ");
			do {
				System.out.println("Enter a number to select an option: ");
				System.out.println("1: Check Balance");
				System.out.println("2: Withdraw");
				System.out.println("3: Deposit");
					u = input.nextDouble();
					if(u == 1) {
						System.out.println("Your balance is " + b);
					}	
					else if(u == 2) {
						System.out.println("Enter Withdraw Amount: ");
						u = input.nextDouble();
						s1.withdraw(u);
						System.out.println("Withdraw Successful");
					}
					else if (u == 3) {
						System.out.println("Enter Deposit Amount: ");
						u = input.nextDouble();
						s1.deposit(u);
						System.out.println("Deposit Successful");
					}
				} while(u !=4 );
		}
		else if (u == 2 ) {
			System.out.println("Checkings account initiated... ");
			System.out.println("Enter an overdraft limit: ");
			o = input.nextDouble();
			Checking c1 = new Checking(o);
			System.out.println("Account has been created "
					+ "with an overdraft limit of " + o);
			System.out.println("Enter a number to select an option: ");
			System.out.println("1: Check Balance");
			System.out.println("2: Withdraw");
			System.out.println("3: Deposit");
			u = input.nextDouble();
			if (u == 1) {
				System.out.println("Your balance is: " + c1.getBalance());
			}
		}
		else {
			System.out.println("That is not a valid option, try again: ");
		}
	}
}
